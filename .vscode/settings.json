{
    "files.exclude": {
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/.venv_prod/**": true,
        "**/.git/**": true,
        "**/.svn/**": true,
        "**/.hg/**": true,
        "**/.DS_Store": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/env/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/virtualenv/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/vendors/**": true,
        "**/__pycache__/**": true,
        "**/**/*.pyc": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "search.exclude": {
        "**/.ruff_cache/**": true,
        "**/.venv_prod/**": true,
        "**/.pytest_cache/**": true,
        "**/.git/**": true,
        "**/.svn/**": true,
        "**/.hg/**": true,
        "**/.DS_Store": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/env/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/virtualenv/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/vendors/**": true,
        "**/__pycache__/**": true,
        "**/**/*.pyc": true
    },
    "files.watcherExclude": {
        "**/.ruff_cache/**": true,
        "**/.venv_prod/**": true,
        "**/.pytest_cache/**": true,
        "**/.git/**": true,
        "**/.svn/**": true,
        "**/.hg/**": true,
        "**/.DS_Store": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/env/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/virtualenv/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/vendors/**": true,
        "**/__pycache__/**": true,
        "**/**/*.pyc": true
    },
    "debug.allowBreakpointsEverywhere": true,
    "editor.rulers": [
        80,
        88,
    ],
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.autoIndent": "full",
    "explorer.sortOrder": "type",
    "editor.formatOnSave": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.testing.pytestEnabled": true,
    "editor.guides.bracketPairs": "active",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true
    },
    "python.defaultInterpreterPath": ".venv",
}
